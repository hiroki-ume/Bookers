<h1>Books</h1>

<table>
<tr>
	<th>Title</th>
	<th>Body</th>
</tr>

<% @books.each do |book| %>


	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "show", book_path(book) %></td>
		<td><%= link_to "edit", edit_book_path(book) %></td>
		<td><%= link_to "destroy", book_path(book), method: :delete %></td>
	</tr>
<% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_field :body %>
	<br>
	<br>
	<%= f.submit'Create book' %>

<% end %>






